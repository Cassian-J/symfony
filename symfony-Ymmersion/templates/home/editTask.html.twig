{% extends 'base.html.twig' %}

{% block title %}Edit Task{% endblock %}
{% block navbar%}{% include 'navbar/navbar.html.twig' %}{% endblock %}
{% block body %}
    <h1>{{task.title}}</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <form action="{{ path('task.delete', {id: task.id}) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger btn-sm"> Delete Task </button>
    </form>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/taskForm.js') }}"></script>
{% endblock %}