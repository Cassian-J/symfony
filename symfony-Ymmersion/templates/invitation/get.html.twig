{% extends 'base.html.twig' %}

{% block title %}Invitations{% endblock %}
{% block navbar%}{% include 'navbar/navbar.html.twig' %}{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h2 class="mb-3">Mes Invitations</h2>

        {% if invitation is not empty %}
            <ul class="list-group">
                {% for inv in invitation %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Invitation du groupe : {{ inv.WhichGroup.Name }}
                        <div>
                            <form method="POST" action="{{ path('invitation.accept', { 'id': inv.id }) }}" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Accepter</button>
                            </form>
                            <form method="POST" action="{{ path('invitation.reject', { 'id': inv.id }) }}" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Refuser</button>
                            </form>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucune invitation pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}