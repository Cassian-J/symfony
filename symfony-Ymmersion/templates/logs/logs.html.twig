{% extends 'base.html.twig' %}

{% block title %}Logs{% endblock %}
{% block navbar %}{% include 'navbar/navbar.html.twig' %}{% endblock %}
{% block body %}
    <h1>Logs</h1>
    
    {% if logs is not empty %}
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Task Name</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.date|date('d-m-Y H:i') }}</td>
                        <td>{{ taskNames[log.taskId] ?? 'Task not found' }}</td>
                        <td>{{ log.point }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun log trouv√©.</p>
    {% endif %}
{% endblock %}


